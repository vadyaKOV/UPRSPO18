<Window x:Class="UPRSPO18Git.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UPRSPO18Git"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding CurrentHotels}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="auto"/>
                <DataGridTextColumn Header="Name" Width="*"/>
                <DataGridTextColumn Header="CountOfStars" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
